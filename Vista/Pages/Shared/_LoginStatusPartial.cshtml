
@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline" asp-page="/Login/CerrarSesion">
        Bienvenido @User.Identity.Name
        <button type="submit" class="ml-0 btn btn-link">Cerrar sesión</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-page="/Login/IniciarSesion">Autenticarse</a>
}